{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "baseUrl": "src",
    "experimentalDecorators": true,
    "declaration": true,

    "target": "es5",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["**/dist", "node_modules", "**/node_modules", "**/*.spec.ts", "**/__tests__", "**/*.test.ts"]
}
